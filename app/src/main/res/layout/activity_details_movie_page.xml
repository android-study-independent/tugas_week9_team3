<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsMoviePage"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/posterDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/imagedetail"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/posterDetail"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/textDetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="LoreIpsum"
        app:layout_constraintTop_toBottomOf="@id/imagedetail"
        app:layout_constraintLeft_toLeftOf="@id/imagedetail"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>